# 复制为 .env 后填写实际值
# cp .env.example .env

# 加密密钥（留空则首次启动时自动生成并写入）
ENCRYPTION_KEY=
DATABASE_URL=sqlite+aiosqlite:///./mail_agg.db

# Telegram 推送（可选）
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

POLL_INTERVAL_SECONDS=10

# Webhook（可选）
WEBHOOK_URL=

# API 鉴权（可选）：设置后请求需带 Authorization: Bearer <token> 或 X-API-Key
API_TOKEN=

# 控制台登录（可选）：配置后前端显示登录页
ADMIN_USERNAME=
ADMIN_PASSWORD=
# JWT_SECRET=  # 可选，不填则用 API_TOKEN 或默认值
# ADMIN_RESET_TOKEN=  # 可选，用于「忘记密码」重置